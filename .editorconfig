# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.json]
indent_size = 4
insert_final_newline = ignore

[*.md]
trim_trailing_whitespace = false
indent_size = 2

[*.py]
indent_size = 4

[*.sh]
indent_size = 4

[*.sql]
indent_size = 4

[*.{yml,yaml}]
indent_size = 2

[*.{htm,html}]
indent_size = 2

[*.js]
indent_size = 2

[*.css]
indent_size = 2

[Makefile]
indent_style = tab

[*.bat]
indent_style = tab

